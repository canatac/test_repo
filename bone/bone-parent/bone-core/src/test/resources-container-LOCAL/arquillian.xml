<?xml version="1.0" encoding="UTF-8"?>
<arquillian xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xmlns="http://jboss.org/schema/arquillian"
            xsi:schemaLocation="http://jboss.org/schema/arquillian
            http://jboss.org/schema/arquillian/arquillian_1_0.xsd">

    <!-- Archive Path for manual inspection -->
    <engine>
        <property name="deploymentExportPath">target/</property>
    </engine>

    <!-- Deployment Configuration -->
    <container qualifier="LOCAL" default="true">
        <configuration>
            <property name="bindHttpPort">11111</property>
            <property name="sunResourcesXml">src/test/resources-container-LOCAL/glassfish-resources.xml</property>
        </configuration>
        <protocol type="Servlet 3.0">
            <property name="host">localhost</property>
            <property name="port">11111</property>
            <property name="contextRoot">/bone-core</property>
        </protocol>
    </container>
</arquillian>

