		<mysql-connector-java.version>5.1.17</mysql-connector-java.version>
		<poi.version>3.8</poi.version>
		<junit-version>4.8.1</junit-version>
		<glassfish-version>3.1</glassfish-version>
		<arquillian-bom.version>1.0.0.Final</arquillian-bom.version>
		<exec-maven-plugin.version>1.2</exec-maven-plugin.version>
		<maven-ejb-plugin.version>2.3</maven-ejb-plugin.version>
